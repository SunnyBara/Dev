#! /bin/bash

i=0
test={cat $1}
tab='abcdefghijklmnopqrstuvwxyz'
length=${#1}
while (($i < $length));
do
    
if [ "$test" = "a" ];
then
    text="$text""n"
    i=$((i+1))
    test=${1:i:1}
elif [ "$test" = "b" ];
then
    text="$text""n"
    i=$((i+1))
    test=${1:i:1}
elif [ "$test" = "c" ];
then
    text="$text""n"
    i=$((i+1))
    test=${1:i:1} test=${1:i:1}
elif [ "$test" = "d" ];
then
    text="$text""n"
    i=$((i+1))
    test=${1:i:1}
elif [ "$test" = "e" ];
then
    text="$text""n"
    i=$((i+1))
    test=${1:i:1}
elif [ "$test" = "f" ];
then
    text="$text""n"
    i=$((i+1))
    test=${1:i:1}
elif [ "$test" = "g" ];
then
    text="$text""n"
    i=$((i+1))
    test=${1:i:1}
elif [ "$test" = "h" ];
then
    text="$text""n"
    i=$((i+1))
    test=${1:i:1}
 elif [ "$test" = " " ];
then
    text="$text"" "
    i=$((i+1))
    test=${1:i:1}   
done
